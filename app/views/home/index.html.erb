<% if current_user %>
<h3>Organization: <%= @tenant.name %></h3>
<% else %>
<div class="jumbotron">
	<h2>Coaching Online</h2>
	<p class="lead">
		Tudo que você precisa para atender seu cliente em um lugar só.
	</p>
</div>

<div class="row">
	<div class="plans clearfix">
		<div class="col-lg-3 col-lg-offset-3 plan">
			<h2>Coach</h2>
			<div class="price pull-right">
				Preço: Free
			</div>
			<div class="features">
				<ul>
					<li>Numero de fichas ilimitados.</li>
					<li>Limite de 5 alunos.</li>
					<li>Forum para orientar alunos coletivamente.</li>
					<li>Dashboard de controle.</li>
				</ul>
			</div>
			<p>
				<%= link_to 'Cadastre', new_user_registration_path(plan: 'free'), class: 'btn btn-primary sign-up' %>
			</p>
		</div>
		<div class="col-lg-3 plan">
			<h2>Mestre</h2>
			<div class="price pull-right">
				Preço: $10 
			</div>
			<div class="features">
				<ul>
					<li>Todos os beneficios da versao Jr.</li>
					<li>Numero de alunos ilimitado.</li>
					<li>Emails e alertas automatizados.</li>
					<li class='extra'>Chat individual com alunos!</li>
				</ul>
			</div>
			<p>
				<%= link_to 'Cadastre', new_user_registration_path(plan: 'premium'), class: 'btn btn-primary sign-up' %>
			</p>
		</div>
	</div>
</div>

<% end %>